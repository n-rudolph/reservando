# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample clientHome page
GET     /                           controllers.HomeController.index


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST    /register                   controllers.RegisterController.registerUser

POST    /login                      controllers.LoginController.login
GET     /logout                     controllers.LoginController.logout

#Client
GET     /client/home                controllers.HomeController.clientHome
GET     /client/profile             controllers.ClientProfileController.clientProfile
GET     /client/profile/user        controllers.ClientProfileController.getClient
POST    /client/changePassword      controllers.ClientProfileController.changePassword
POST    /client/changeBioInfo       controllers.ClientProfileController.changeBioInfo
POST    /client/changeAddress       controllers.ClientProfileController.changeAddress
POST    /client/changeProfileImage  controllers.ClientProfileController.changeProfileImage

#Restaurant
POST    /restaurant                 controllers.RestaurantController.addRestaurant
GET     /restaurants/all            controllers.RestaurantController.getAll
GET     /restaurants/firsts         controllers.RestaurantController.getFirsts
POST    /restaurant/view            controllers.RestaurantController.openRestaurantProfile
POST    /restaurant/state           controllers.RestaurantController.changeState

#Delivery
POST    /delivery/edit              controllers.DeliveryController.editDelivery

#Owner
GET     /owner/home                 controllers.HomeController.ownerHome
GET     /owner/new-restaurant       controllers.HomeController.newRestaurant
GET     /owner/profile              controllers.OwnerProfileController.ownerProfile
GET     /owner/restaurants          controllers.RestaurantController.viewOwnerRestaurants
GET     /owner/profile/user         controllers.OwnerProfileController.getOwner
POST    /owner/changePassword       controllers.OwnerProfileController.changePassword
POST    /owner/changeBioInfo        controllers.OwnerProfileController.changeBioInfo
POST    /owner/changeAddress        controllers.OwnerProfileController.changeAddress
POST    /owner/changeProfileImage   controllers.OwnerProfileController.changeProfileImage



GET     /all/users                  controllers.RegisterController.getUsers
GET     /all/locals                 controllers.RegisterController.getLocals